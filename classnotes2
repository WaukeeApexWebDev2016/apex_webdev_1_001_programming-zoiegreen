function sub ($first, $second) {
  return $first - $second;

}

echo sub(5, 1);

$result = sub(10, 9);

echo "Your result: " . $result;


function hardmath($x, $y, $z) {

  $b = $x + $y;

  return $b * $z;

}
echo hardmath (1, 2, 9);



function areaofrect($base, $height) {
  return $base * $height;

}

echo areaofrect(5, 5);

